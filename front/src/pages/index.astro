  {
    id: "1",
    title: "2021 Tesla Model 3",
    image: "https://images.unsplash.com/photo-1560958089-b8a1929cea89?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1171&q=80",
    price: 42990,
    year: 2021,
    mileage: 12500,
    description: "Electric vehicle with great range and performance. Autopilot capable, premium interior, and excellent condition."
  },
  {
    id: "2",
    title: "2020 BMW X5",
    image: "https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fimages.hgmsites.net%2Fhug%2F2020-bmw-x5-series_100728662_h.jpg&f=1&nofb=1&ipt=42ec552519f26255e54f83b45866c3c8b9b18e1782c235023e7753017d7d7127",
    price: 54995,
    year: 2020,
    mileage: 28750,
    description: "Luxury SUV with xDrive, leather interior, panoramic sunroof, and advanced driver assistance systems."
  },
  {
    id: "3",
    title: "2019 Honda Civic",
    image: "https://images.unsplash.com/photo-1590362891991-f776e747a588?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1169&q=80",
